---
import { Icon } from 'astro-icon'
const navLinks = [
  {
    name: 'Resume',
    url: 'https://github.com/BradleyRodriq/BradleyRodriq/blob/main/Bradley%20Rodriguez.pdf',
    style: 'primary',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/bradley-rodriq/',
    style: 'primary',
  },
  {
    name: 'GitHub',
    url: 'https://github.com/BradleyRodriq',
    style: 'primary',
  },
];

---
<nav>
  <div class="container nav-container">
  <Icon name="logo" width={225} class="logo"/>
  <div class="nav-wrapper">
    <button class="btn btn--menu" id="menu-btn" aria-expanded="false" aria-label="Open mobile nav">
      <Icon name="feather:menu" width={25}/>
    </button>
    <ul class="nav-links" role="navigation">
      {navLinks.map(link => (
        <li role="none">
          <a href={link.url} class="btn btn--${link.style} nav-link">{link.name}</a>
        </li>
      ))
      }
    </ul>
  </div>
  </div>
</nav>

<script>
  const navBtn = document.querySelector('#menu-btn');
  navBtn.addEventListener('click', () => {
    navBtn.setAttribute('aria-expanded', navBtn.getAttribute('aria-expanded') === 'false' ? 'true' : 'false');
  })
</script>











